{
  "hooks": {},
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "mcpServers": {
    "consult7": {
      "command": "uvx",
      "args": [
        "consult7",
        "openrouter",
        "sk-or-XxxxxxxxxxxxxxxXxxxxxxxxxxxxxxXxxxxxxxxxxxxxx"
      ],
      "env": {},
      "disabled": false,
      "alwaysAllow": [
        "consultation"
      ]
    },
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {},
      "disabled": false,
      "alwaysAllow": [
        "search_documentation",
        "get_documentation"
      ]
    },
    "ref": {
      "url": "https://api.ref.tools/mcp",
      "apiKey": "",
      "disabled": false,
      "alwaysAllow": [
        "ref_search_documentation",
        "ref_read_url"
      ]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    }
  },
  "skipDangerousModePermissionPrompt": true
}
